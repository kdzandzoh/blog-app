<h1 class="text-center mb-3 mt-3">All posts</h1>
<% posts.forEach(function(post) {%>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title" style='display:inline'> <%= post.username %> </h5>  
                <p style='display:inline; float: right'> <%= post.createdAt.toDateString().substring(4) %> </p>

                <p class="mt-2"> <%= post.body %> </p>
    
                <% if (!currentUser) { %>
                    <button class="btn btn-primary btn-sm"> <%= post.likes.length %> ❤️ </button>
                <% } else { %>
                    <button class="btn btn-primary btn-sm"> <%= post.likes.length %> ❤️  </button>
                <% } %>
    
                <% if (post.comments.length === 1) { %>
                    <p class="mt-3"><a href="/posts/<%= post._id %>/comments"> <%= post.comments.length %> Comment</a></p>
                <% } else { %>
                    <p class="mt-3"><a href="/posts/<%= post._id %>/comments"> <%= post.comments.length %> Comments</a></p>
                <% } %>
                
                <a href="/posts/<%= post._id%>" class="btn btn-outline-primary mb-2"> Add comment </a>

                <% if (currentUser && currentUser.username === post.username) { %>
                    <a href="/posts/<%= post._id%>/delete" class="btn btn-outline-secondary mb-2">Delete post</a>
                <% } %>
            </div>
        </div>
<% }); %>